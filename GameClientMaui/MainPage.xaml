<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameClientMaui.MainPage"
             xmlns:local="clr-namespace:GameClientMaui">
    <Grid RowDefinitions="1*,2*" ColumnDefinitions="1*,1*,1*,1*,1*,1*,1*">

        <local:CardStackView Grid.Row="0" Grid.Column="0" BindingContext="{Binding FoundationStacks[0]}" OffsetY="1"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="0" Grid.Column="1" BindingContext="{Binding FoundationStacks[1]}" OffsetY="1"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="0" Grid.Column="2" BindingContext="{Binding FoundationStacks[2]}" OffsetY="1"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="0" Grid.Column="3" BindingContext="{Binding FoundationStacks[3]}" OffsetY="1"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="0" Grid.Column="5" BindingContext="{Binding WasteStack}" OffsetY="1" UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="0" Grid.Column="6" BindingContext="{Binding DeckStack}" OffsetY="1" UpdateTick="{Binding UpdateTick}"/>
        
        <local:CardStackView Grid.Row="1" Grid.Column="0" BindingContext="{Binding PileStacks[0]}"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="1" Grid.Column="1" BindingContext="{Binding PileStacks[1]}"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="1" Grid.Column="2" BindingContext="{Binding PileStacks[2]}"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="1" Grid.Column="3" BindingContext="{Binding PileStacks[3]}"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="1" Grid.Column="4" BindingContext="{Binding PileStacks[4]}"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="1" Grid.Column="5" BindingContext="{Binding PileStacks[5]}"  UpdateTick="{Binding UpdateTick}"/>
        <local:CardStackView Grid.Row="1" Grid.Column="6" BindingContext="{Binding PileStacks[6]}"  UpdateTick="{Binding UpdateTick}"/>
        
        <!-- 반투명 효과 
        <Border BackgroundColor="White" VerticalOptions="Fill" HorizontalOptions="Fill"
                Grid.RowSpan="2"
                Grid.ColumnSpan="7"
                IsVisible="False"
            Opacity="0.6" InputTransparent="True">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
        </Border>
        -->
    </Grid>
</ContentPage>
