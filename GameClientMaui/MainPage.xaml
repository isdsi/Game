<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameClientMaui.MainPage"
             xmlns:local="clr-namespace:GameClientMaui">
    <Grid RowDefinitions="Auto, *" ColumnDefinitions="1*,1*,1*,1*,1*,1*,1*" Background="Gray">
        <CollectionView ItemsSource="{Binding Cards}"
                    ItemsLayout="VerticalList"
                    SelectionMode="None"
                    Margin="12"
                    Grid.Column="6"
                    Grid.Row="0" HeightRequest="200" Background="LightGray">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <local:CardView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
